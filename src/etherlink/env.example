# ============================================================================
# ETHERLINK INTEGRATION ENVIRONMENT CONFIGURATION
# ============================================================================

# Private Key for Contract Deployment and Testing
# WARNING: Never commit your actual private key to version control!
PRIVATE_KEY=your_private_key_here

# ============================================================================
# RPC ENDPOINTS
# ============================================================================

# BSC Testnet (for initial testing)
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# BSC Mainnet (for production testing)
BSC_MAINNET_RPC_URL=https://bsc-dataseed.binance.org/

# Etherlink Testnet (when available)
ETHERLINK_TESTNET_RPC_URL=https://testnet-rpc.etherlink.com/

# Etherlink Mainnet
ETHERLINK_MAINNET_RPC_URL=https://mainnet-rpc.etherlink.com/

# Sepolia (for comparison testing)
SEPOLIA_RPC_URL=https://sepolia.infJura.io/v3/YOUR_INFURA_PROJECT_ID

# ============================================================================
# API KEYS
# ============================================================================

# BSCScan API Key (for contract verification)
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Etherlink Explorer API Key (when available)
ETHERLINK_API_KEY=your_etherlink_api_key_here

# Etherscan API Key (for Sepolia verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API Key (for gas reporting)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ============================================================================
# 1INCH FUSION+ API
# ============================================================================

# 1inch Fusion+ API Key
ONEINCH_API_KEY=your_1inch_api_key_here

# 1inch Fusion+ API Base URL
ONEINCH_API_BASE_URL=https://fusion.1inch.io

# ============================================================================
# ICP INTEGRATION
# ============================================================================

# ICP Canister ID (for cross-chain communication)
ICP_CANISTER_ID=your_icp_canister_id_here

# ICP Network Signer Address (for Chain-Key signature verification)
ICP_NETWORK_SIGNER_ADDRESS=your_icp_network_signer_address_here

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable gas reporting
REPORT_GAS=true

# Test timeout (in milliseconds)
TEST_TIMEOUT=60000

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================

# Initial gas price for deployment (in wei)
INITIAL_GAS_PRICE=1000000000

# Gas limit for contract deployment
DEPLOYMENT_GAS_LIMIT=5000000

# ============================================================================
# TESTING SETTINGS
# ============================================================================

# Test wallet private key (separate from deployment key)
TEST_PRIVATE_KEY=your_test_private_key_here

# Test wallet address
TEST_WALLET_ADDRESS=your_test_wallet_address_here

# Test amount for HTLC operations (in wei)
TEST_HTLC_AMOUNT=1000000000000000000

# Test timelock duration (in seconds)
TEST_TIMELOCK_DURATION=3600 